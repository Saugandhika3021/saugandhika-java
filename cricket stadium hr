import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int l,b;
        l=s.nextInt();
        b=s.nextInt();
        int p= 2*(l+b);
        System.out.println(p);
        int a=l*b;
        System.out.println(a);
    }
}
